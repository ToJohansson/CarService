@model Car
@{
    ViewBag.Title = "Add Car";
}

<h1>Add Car</h1>
<form asp-controller="" asp-action="">
    <label asp-for="Brand"></label>
    <input asp-for="Brand" />
    <span asp-validation-for="Brand"></span>

    <label asp-for="Model"></label>
    <input asp-for="Model" />
    <span asp-validation-for="Model"></span>

    <label asp-for="Year"></label>
    <input asp-for="Year" />
    <span asp-validation-for="Year"></span>

    <label asp-for="EngineType"></label>
    <input asp-for="EngineType" />
    <span asp-validation-for="EngineType"></span>
    <div>
        <button type="submit">submit</button>
    </div>
</form>
<a href="/">Back</a>
@section scripts
{
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}