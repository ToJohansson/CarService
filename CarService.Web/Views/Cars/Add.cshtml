@model AddVM
@{
    ViewBag.Title = "Add Car";
}

<h1>Add Car</h1>
<form asp-controller="" asp-action="">
    <div class="mb-3">
        <label class="form-label" asp-for="Brand"></label>
        <input class="form-control" asp-for="Brand" />
        <span class="text-danger" asp-validation-for="Brand"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Model"></label>
        <input class="form-control" asp-for="Model" />
        <span class="text-danger" asp-validation-for="Model"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Year"></label>
        <input class="form-control" asp-for="Year" />
        <span class="text-danger" asp-validation-for="Year"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="EngineType"></label>
        <input class="form-control" asp-for="EngineType" />
        <span class="text-danger" asp-validation-for="EngineType"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="TripMeter"></label>
        <input class="form-control" asp-for="TripMeter" />
        <span class="text-danger" asp-validation-for="TripMeter"></span>
    </div>

    <div class="d-grid mt-4">
        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
    </div>
</form>

<section class="mt-3">
    <a class="btn btn-warning" href="/">Back</a>
</section>
@section scripts
{
@* NOTE: Invalid ajax.aspnetcdn.com URLs to test the fallback *@
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.j"
            asp-fallback-src="/scripts/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery">
    </script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.j"
            asp-fallback-src="/scripts/jquery-validate/jquery.validate.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator">
    </script>

    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.j"
            asp-fallback-src="/scripts/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
    </script>
}