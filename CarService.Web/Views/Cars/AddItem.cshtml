@model AddItemVM
@{
    ViewBag.Title = "Add new item";
}

<h1>Add a new service item to your car</h1>
<form asp-controller="Cars" asp-action="AddItem">
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Description"></label>
    <input asp-for="Description" />
    <span asp-validation-for="Description"></span>

    <label asp-for="KmInterval"></label>
    <input asp-for="KmInterval" />
    <span asp-validation-for="KmInterval"></span>

    <label asp-for="TimeIntervalMonths"></label>
    <input asp-for="TimeIntervalMonths" />
    <span asp-validation-for="TimeIntervalMonths"></span>

    <label asp-for="LastService"></label>
    <input asp-for="LastService" />
    <span asp-validation-for="LastService"></span>

    <button type="submit">Add service item</button>
</form>
<a asp-controller="Cars"
   asp-action="Details"
   asp-route-id=@ViewBag.CarId>
    back to car details
</a>

@section scripts
{
@* NOTE: Invalid ajax.aspnetcdn.com URLs to test the fallback *@
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.j"
            asp-fallback-src="/scripts/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery">
    </script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.j"
            asp-fallback-src="/scripts/jquery-validate/jquery.validate.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator">
    </script>

    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.j"
            asp-fallback-src="/scripts/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
    </script>
}
